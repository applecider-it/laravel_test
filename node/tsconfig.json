    "types": ["node", "ws"],
    "strict": true,
    "baseUrl": "./app",
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": [
    "app/**/*.ts"
  ]
}
